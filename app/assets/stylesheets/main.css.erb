/*Games*/
.new-game-info{
	padding: 10px 10px 10px 10px;
	border:1px solid #DDDDDD;
    border-bottom-left-radius:5px;
    border-bottom-right-radius:5px;
    border-top-left-radius:5px;
    border-top-right-radius:5px;
    margin-bottom: 20px;

}
.score-bar label{
	font-size: 36px;
	width: 80px;
	padding-bottom: 10px;
	padding-right: 100px;
	padding-left: 100px;
}
.new-game-info .score-bar{
	height: 350px;

}
.new-game-info .score-bar input{
	height: 300px;
	width: 300px;
	margin-left: auto;
	margin-right: auto;
	font-size: 160px;
	}
.new-game-info .score-bar input:hover{
	box-shadow:4px 4px 3px rgba(20%,20%,40%,0.5);
	box-shadow:2px 2px 1px rgba(20%,20%,40%,0.5) inset;
	box-shadow:1px 1px 1px rgba(20%,20%,40%,0.6),2px 2px 4px rgba(20%,20%,40%,0.4),4px 4px 8px rgba(20%,20%,40%,0.4);
}
.score-bar p{
	margin-top: 150px;
	font-size: 120px;
	padding-left: 50px;
	margin-left: auto;
	margin-right: auto;
}

/*Tips*/
.tip-index-player{
	position: fixed;
	background-color:#000;
	-moz-opacity:0.8; /* Moz FF 透明度20%*/
	opacity: 0.8; /* 支持CSS3的瀏覽器（FF 1.5也支持）透明度20%*/
	width:100%;
	height: 800px;
	top: 40px;
	left: 0px;
	z-index: 999;
	
}
.tip-index-player input{
	margin-top: 245px;
	margin-right: 50px;
	float: right;
	z-index: 1000;
}
.tip-index-player p{
	margin-top: 250px;
	margin-right: 150px;
	float: right;
	-moz-opacity:1; /* Moz FF 透明度20%*/
	opacity: 1; /* 支持CSS3的瀏覽器（FF 1.5也支持）透明度20%*/
	font-size: 32px;
	color: #fff;
}
.footer{
	background-color: #1b1b1b;
  	background-image: -moz-linear-gradient(top, #222222, #111111);
  	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#222222), to(#111111));
  	background-image: -webkit-linear-gradient(top, #222222, #111111);
  	background-image: -o-linear-gradient(top, #222222, #111111);
  	background-image: linear-gradient(to bottom, #222222, #111111);
  	background-repeat: repeat-x;
  	border-color: #252525;
}