<div class="sign-up">
  <div class="container">
    
      <%= form_for(resource,:html =>{:autocomplete => "off",:class =>"form-register"} ,:as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <h2>註冊<small>Sign up</small></h2>
      <%= devise_error_messages! %>

      <%= f.email_field :email, :autofocus => true,:placeholder => "Email",class: "input-block-level" %><br/>
      <%= f.password_field :password,:placeholder => "Password",class: "input-block-level" %><br/>
      <%= f.password_field :password_confirmation,:placeholder => "Password confirmation",class: "input-block-level" %><br/>
      <%= f.label :avatar do %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %><% end %>
      <%= f.submit "Sign up",:class=>"btn btn-primary" %>
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "沒收到確認信嗎?", new_confirmation_path(resource_name) %>
      <% end -%>
    <% end %>
  </div>
</div>