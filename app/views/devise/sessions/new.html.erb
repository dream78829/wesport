<div class="sign-up">
  <div class="container">
    
      <%= form_for("team_user", :url => team_user_session_path,:html =>{class: "form-login"}) do |f| %>
      <h2>登入<small>Sign in</small></h2>
      
      <div class="control-group">
        <label class="control-label" for="j_username">電子郵件 *</label>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true,:placeholder => "Email",class: "input-block-level" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="j_username">密碼 *</label>
        <div class="controls">
          <%= f.password_field :password,:placeholder => "Password",class: "input-block-level" %><br/>
        </div>
      </div>
      <%= f.submit "登錄",:class=>"btn btn-primary" %>
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "忘記密碼?", new_password_path(resource_name) %>
      <% end %>
     
    <% end %>
  </div>
</div>