<div class="container">
<h2>修改密碼 <small>Edit your password</small></h2>
<hr>
<%= devise_error_messages! %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-edit-password",:method => :put }) do |f| %>
  <h3>修改密碼</h3>

  <%= f.email_field :email, :autofocus => true,:placeholder => "Email",class: "input-block-level" %><br/>
   <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <i>(leave blank if you don't want to change it)</i>
  <%= f.password_field :password, :autocomplete => "off" ,:placeholder => "新密碼",class: "input-block-level" %><br/>
  <%= f.password_field :password_confirmation, :autocomplete => "off" ,:placeholder => "確認新密碼",class: "input-block-level" %><br/>
  <%= f.password_field :current_password, :autocomplete => "off" ,:placeholder => "舊密碼",class: "input-block-level" %>

  <div class="pull-right">
  <%= link_to "取消", :back,class: "btn" %>
  <%= f.submit "更新",class: "btn btn-success" %>
</div>
<% end %>

</div>