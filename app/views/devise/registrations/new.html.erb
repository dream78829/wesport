<div class="sign-up">
  <div class="container">
    <%= form_for(resource,:html =>{:autocomplete => "off",:class =>"form-register" ,:multipart => true} ,:as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <h2>註冊<small>Sign up</small></h2>
      <div class="control-group">
        <label class="control-label" for="team_user_email">電子郵件 *</label>
        <div class="controls">
          <%= f.email_field :email, :autofocus => true,:placeholder => "Email",class: "input-block-level" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="team_user_email">顯示名稱 *</label>
        <div class="controls">
          <%= f.email_field :name, :autofocus => true,:placeholder => "Nick name",class: "input-block-level" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="team_user_password">密碼 *</label>
        <div class="controls">
          <%= f.password_field :password,:placeholder => "Password",class: "input-block-level" %><br/>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="team_user_password_confirmation">密碼確認 *</label>
        <div class="controls">
          <%= f.password_field :password_confirmation,:placeholder => "Password confirmation",class: "input-block-level" %>
        </div>
      </div>
      <%= f.submit "註冊",:class=>"btn btn-primary" %>
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "沒收到確認信嗎?", new_confirmation_path(resource_name) %>
      <% end %>
    <% end %>
  </div>
</div>