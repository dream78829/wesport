  <div class="index-banner">
    <%= image_tag("/assets/index-banner6.png")%>
  </div>
  <div class="index-start row-fluid">
    <div class="index-start-box span5 offset1">
      <h2>建立球隊</h2>
      <p>Wnat to create a team box-score? Hit me right now!</p>
      <%= link_to "建立球隊",{:controller=>"teams",:action=>"new"},:class=>"btn"%>
    </div>
    <div class="index-start-box span5">
      <h2>加入球隊</h2>
      <p>I have a team alredy and I want to find it!</p>
      <%= link_to "尋找球隊",{:controller=>"games",:action=>"new"},:class=>"btn"%>
    </div>
  </div>
  <div class="index-news">
    <div class="container">
      <h2>最新賽事</h2>
      <table  class="table table-striped table-hover">
        <tr>
          <th>賽事</th>
          <th>類別</th>
          <th>日期</th>
          <th>比數</th>
          <th>地點</th>
        </tr>
        <% if @games.any? == true %>
          <% @games.each do |game| %>
            <tr>
              <td><%= link_to "#{Team.find(game.h_team_id).name}  vs  #{game.name}", :controller => 'records', :action => 'index', :id => game %></td>
              <td><%= League.find(game.league_id).name %></td>
              <td>
                <% if game.date_time%>
                  <%= game.date_time.strftime("%Y-%m-%d") %>
                <% else %>
                  <p>無記錄</p>
                <% end%>
              </td>
              <td><%= game.h_team_points %>：<%= game.g_team_points %></td>
              <th>
                <% if game.location%>
                  <%= game.location %>
                <% else %>
                  <p>無記錄</p>
                <% end%>
              </th>
            </tr>
          <% end %>
        <% else %>
        <tr>
          <td colspan="5">您還沒有任何賽事記錄</td>
        </tr>
        <% end%>
      </table>
    </div>
  </div>