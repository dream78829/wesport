<div class="container">
	<h2><%= @team.name%></h2>
	<hr>
	<div class="frame-box">
		<h2>最新賽事</h2>
		<table  class="table table-striped table-hover">
        <tr>
          <th>賽事</th>
          <th>類別</th>
          <th>日期</th>
          <th>比數</th>
          <th>地點</th>
        </tr>
        <% if @games.any? == true %>
          <% @games.each do |game| %>
            <tr>
              <td><%= link_to "#{Team.find(game.h_team_id).name}  vs  #{game.name}", :controller => 'records', :action => 'index', :id => game %></td>
              <td><%= League.find(game.league_id).name %></td>
              <td>
                <% if game.date_time%>
                  <%= game.date_time.strftime("%Y-%m-%d") %>
                <% else %>
                  <p>無記錄</p>
                <% end%>
              </td>
              <td><%= game.h_team_points %>：<%= game.g_team_points %></td>
              <th>
                <% if game.location%>
                  <%= game.location %>
                <% else %>
                  <p>無記錄</p>
                <% end%>
              </th>
            </tr>
          <% end %>
        <% else %>
        <tr>
          <td colspan="5">您還沒有任何賽事記錄</td>
        </tr>
        <% end%>
      </table>
	</div>
</div>