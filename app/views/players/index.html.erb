<h1>Listing players</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Team</th>
    <th>Number</th>
    <th>ID</th>
    <th></th>
    <th></th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.team_id %></td>
    <td><%= player.number %></td>
    <td><%= player.id %></td>
    <td><%= link_to 'Show', :controller => 'player_box_scores', :action => 'index', :id => player %></td>
    <td><%= link_to 'Edit', edit_player_path(player) %></td>
    <td><%= button_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
