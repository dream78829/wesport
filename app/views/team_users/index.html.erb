<div class="index">

<%= render partial: "carousel" %>


  <div class="container">
  <h2>最新賽事記錄</h2><%= button_to "新增賽事",new_game_path,:class=> "pull-right btn btn-primary" %>
  <table  class="table table-striped table-hover">
    <tr>
      <th>對手</th>
      <th>聯盟</th>
      <th>名稱</th>
      <th>時間</th>
   </tr>
<% if @games.any? == true %>
  <% @games.each do |game| %>
    <tr>
      <td><%= game.name %></td>
      <td><%= League.find(game.league_id).name %></td>
      <td><%= link_to game.name, :controller => 'records', :action => 'index', :id => game %></td>
      <td><%= game.created_at %></td>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td colspan="4">您還沒有任何賽事記錄</td>
  </tr>
<% end%>
</table>
<% if @players.any? ==true && @games.any? ==false%>
  <div id="tips" class="tips tip-index-game" onClick="closeTip();">
    <p>新增一場比賽➡</p>
  </div>
  <% end %>
  </div>
</div>