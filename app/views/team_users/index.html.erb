<div class="index">

<%= render partial: "carousel" %>


  <div class="container">
  <h2>最新賽事記錄</h2>
  <div class="pull-right" style="padding-bottom:10px;">
    <%= link_to raw("<i class=\"icon-plus-sign icon-white\"></i> 新增賽事"),new_game_path,:class=> "btn btn-primary" %>
  </div>
  <table  class="table table-striped table-hover">
    <tr>
      <th>對手</th>
      <th>聯盟</th>
      <th>名稱</th>
      <th>日期</th>
      <th>地點</th>
   </tr>
<% if @games.any? == true %>
  <% @games.each do |game| %>
    <tr>
      <td><%= game.name %></td>
      <td><%= League.find(game.league_id).name %></td>
      <td><%= link_to game.name, :controller => 'records', :action => 'index', :id => game %></td>
      <td>
        <% if game.date_time%>
          <%= game.date_time.strftime("%Y-%m-%d") %>
        <% end%>
      </td>
      <td><%= game.location %></td>
    </tr>
  <% end %>
<% else %>
  <tr>
    <td colspan="4">您還沒有任何賽事記錄</td>
  </tr>
<% end%>
</table>
<% if @players.any? ==true && @games.any? ==false%>
  <div id="tips" class="tips tip-index-game" onClick="closeTip();">
    <p>新增一場比賽➡</p>
  </div>
  <% end %>
  </div>
</div>