<div class="index">

  <%= render partial: "carousel" %>

  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span3">
        <div class="well sidebar-nav">
          <ul class="nav nav-list">
            <li class="nav-header"><h3>我的隊伍(隊長)</h3></li>
            <% @matches.each do |match| %>
              <% if match.status == 3%>
                <li><%= link_to "#{Team.find(match.team_id).name}",:controller=>"team_users",:action=>"index",:id=>match.team_id %></a></li>
              <% end%>
            <% end %>
            <li class="nav-header"><h3>我的隊伍(球員)</h3></li>
            <% @matches.each do |match| %>
              <% if match.status == 2%>
                <li><%= link_to "#{Team.find(match.team_id).name}",:controller=>"team_users",:action=>"index",:id=>match.team_id %></a></li>
              <% end%>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="span9">
        <h2>最新賽事記錄</h2>
        <div class="pull-right" style="padding-bottom:10px;">
          <%= link_to raw("<i class=\"icon-plus-sign icon-white\"></i> 新增賽事"),{:controller=>"games",:action=>"new",:id=>@init},:class=> "btn btn-primary"%>
        </div>
        <table  class="table table-striped table-hover">
          <tr>
            <th>對手</th>
            <th>聯盟</th>
            <th>名稱</th>
            <th>日期</th>
            <th>地點</th>
            <th></th>
         </tr>
      <% if @games.any? == true %>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.name %></td>
            <td><%= League.find(game.league_id).name %></td>
            <td><%= link_to game.name, :controller => 'records', :action => 'index', :id => game %></td>
            <td>
              <% if game.date_time%>
                <%= game.date_time.strftime("%Y-%m-%d") %>
              <% end%>
            </td>
            <td><%= game.location %></td>
            <td>
              <div class="btn-group">
                <a class="btn btn-primary" href="#"><i class="icon-th-list icon-white"></i> 功能</a>
                <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><%= link_to raw("<i class=\"icon-plus-sign\"></i> 新增數據"), :controller => 'records', :action => 'new', :id => game %></li>
                  <li class="divider"></li>
                  <li><%= link_to raw("<i class=\"icon-search\"></i> 檢視"), :controller => 'records', :action => 'index', :id => game.id %></li>
                  <li><%= link_to raw("<i class=\"icon-pencil\"></i> 編輯"), edit_game_path(game) %></li>
                  <li><%= link_to raw("<i class=\"icon-trash\"></i> 刪除"), game, method: :delete, data: { confirm: 'Are you sure?' } ,:id => game %></li>
                </ul>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5">您還沒有任何賽事記錄</td>
        </tr>
      <% end%>
      </table>
      <% if @players.any? ==true && @games.any? ==false%>
        <div id="tips" class="tips tip-index-game" onClick="closeTip();">
          <p>新增一場比賽➡</p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>