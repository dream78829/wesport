<div class="index">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span2 offset1">
        <div class="well sidebar-nav">
          <ul class="nav nav-list">
            <li class="nav-header"><h3>我的球隊</h3></li>
            <% if @matches.any? ==true %>
              <% @matches.each do |match| %>
                <% if match.status == 3%>
                  <li><%= link_to "#{Team.find(match.team_id).name}（隊長）",:controller=>"team_users",:action=>"index",:id=>match.team_id %></a></li>
                <% end%>
              <% end %>
              <% @matches.each do |match| %>
                <% if match.status == 2%>
                  <li><%= link_to "#{Team.find(match.team_id).name}",:controller=>"team_users",:action=>"index",:id=>match.team_id %></a></li>
                <% end%>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="span9">
        <div class="frame-box">
          <h2>球員名單</h2>
          <div class="pull-right" style="padding-bottom:10px;z-index:99999;">
            <%= link_to raw("<i class=\"icon-list icon-white\"></i> 所有球員"),{:controller=>"players",:action=>"index",:id=>@init},:class=> "btn btn-primary"%>
            <%= link_to raw("<i class=\"icon-plus-sign icon-white\"></i> 新增球員"),{:action=>"new",:controller => "players",:id=>@init},:class=> "btn btn-primary"%>
          </div>
          <%= render partial: "carousel" %>
        </div>
        <hr>
        <div class="frame-box">
          <h2>最新記錄</h2>
          <div class="pull-right" style="padding-bottom:10px;">
            <%= link_to raw("<i class=\"icon-list icon-white\"></i> 所有賽事"),{:controller=>"games",:action=>"index",:id=>@init},:class=> "btn btn-primary"%>
            <%= link_to raw("<i class=\"icon-plus-sign icon-white\"></i> 新增賽事"),{:controller=>"games",:action=>"new",:id=>@init},:class=> "btn btn-primary"%>
          </div>
          <table  class="table table-striped table-hover">
            <tr>
              <th>對手</th>
              <th>聯盟</th>
              <th>日期</th>
              <th>比數</th>
              <th>地點</th>
              <th></th>
           </tr>
        <% if @games.any? == true %>
          <% @games.each do |game| %>
            <tr>
              <td><%= link_to game.name, :controller => 'records', :action => 'index', :id => game %></td>
              <td><%= League.find(game.league_id).name %></td>
              <td>
                <% if game.date_time%>
                  <%= game.date_time.strftime("%Y-%m-%d") %>
                <% else %>
                  <p>無資料</p>
                <% end%>
              </td>
              <td><%= game.h_team_points %>：<%= game.g_team_points %></td>
              <td>
                <% if game.location%>
                  <%= game.location %>
                <% else %>
                  <p>無資料</p>
                <% end%>
              </td>
              <td>
                <div class="btn-group pull-right">
                  <a class="btn btn-primary" href="#"><i class="icon-th-list icon-white"></i> 功能</a>
                  <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to raw("<i class=\"icon-plus-sign\"></i> 新增數據"), :controller => 'records', :action => 'new', :id => game %></li>
                    <li class="divider"></li>
                    <li><%= link_to raw("<i class=\"icon-search\"></i> 檢視"), :controller => 'records', :action => 'index', :id => game.id %></li>
                    <li><%= link_to raw("<i class=\"icon-pencil\"></i> 編輯"), edit_game_path(game) %></li>
                    <li><%= link_to raw("<i class=\"icon-trash\"></i> 刪除"), game, method: :delete, data: { confirm: 'Are you sure?' } ,:id => game %></li>
                  </ul>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="5">您還沒有任何賽事記錄</td>
          </tr>
        <% end%>
        </table>
    </div>
      <% if @players.any? ==true && @games.any? ==false%>
        <div id="tips" class="tips tip-index-game" onClick="closeTip();">
          <p>新增一場比賽➡</p>
        </div>
      <% end %>
      <hr>
      </div>
    </div>
  </div>
</div>