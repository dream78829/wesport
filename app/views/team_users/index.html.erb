<div class="index">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span2 offset1">
        <div class="well sidebar-nav">
          <ul class="nav nav-list">
            <li class="nav-header">
              <h3>我的球隊</h3>
            </li>
            <% if @matches.any? ==true %>
              <% @matches.each do |match| %>
                <% if match.status == 3%>
                  <li>
                    <%= link_to "#{Team.find(match.team_id).name}（隊長）",:controller=>"team_users",:action=>"index",:id=>match.team_id %>
                  </li>
                <% end%>
              <% end %>
              <% @matches.each do |match| %>
                <% if match.status == 2%>
                  <li>
                    <%= link_to "#{Team.find(match.team_id).name}",:controller=>"team_users",:action=>"index",:id=>match.team_id %>
                  </li>
                <% end%>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="span9">
        <div class="frame-box">
          <h2>球隊名人榜</h2>
          <%= render partial: "carousel" %>
        </div>
        <hr>

        <div class="frame-box">
          <div class="add-button-box">
                <h2>最新記錄</h2>
                <div class="pull-right">
                  <%= link_to raw("<i class=\"icon-list icon-white\"></i> 所有賽事"),{:controller=>"games",:action=>"index",:id=>@init},:class=> "btn btn-primary"%>
                  <%= link_to raw("<i class=\"icon-plus-sign icon-white\"></i> 新增賽事"),{:controller=>"games",:action=>"new",:id=>@init},:class=> "btn btn-primary"%>
                </div>
              </div>
          <table  class="table table-striped table-hover">
            <tr>
              <th>對手</th>
              <th>聯盟</th>
              <th>日期</th>
              <th>比數</th>
              <th>地點</th>
              <th></th>
           </tr>
          <% if @games.any? == true %>
            <% @games.each do |game| %>
            <tr>
              <td><%= link_to game.name, :controller => 'records', :action => 'index', :id => game %></td>
              <td><%= League.find(game.league_id).name %></td>
              <td>
                <% if game.date_time%>
                  <%= game.date_time.strftime("%Y-%m-%d") %>
                <% else %>
                  <p>無資料</p>
                <% end%>
              </td>
              <td><%= game.h_team_points %>：<%= game.g_team_points %></td>
              <td>
                <% if game.location%>
                  <%= game.location %>
                <% else %>
                  <p>無資料</p>
                <% end%>
              </td>
              <td>
                <div class="btn-group pull-right">
                  <%= link_to raw("<i class=\"icon-th-list\"></i> 檢視"), {:controller => 'records', :action => 'index', :id => game.id},:class=>"btn" %>
                  <a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to raw("<i class=\"icon-plus-sign\"></i> 新增數據"), :controller => 'records', :action => 'new', :id => game %></li>
                    <li class="divider"></li>
                    <li><%= link_to raw("<i class=\"icon-search\"></i> 檢視"), :controller => 'records', :action => 'index', :id => game.id %></li>
                    <li><%= link_to raw("<i class=\"icon-pencil\"></i> 編輯"), edit_game_path(game) %></li>
                    <li><%= link_to raw("<i class=\"icon-trash\"></i> 刪除"), game, method: :delete, data: { confirm: '刪除賽事，記錄會一併刪除！您確定要刪除嗎？' } ,:id => game %></li>
                  </ul>
                </div>
              </td>
            </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="5">您還沒有任何賽事記錄</td>
            </tr>
        <% end%>
          </table>
        </div>

        <hr>
        <div class="frame-box">
          <div class="row-fluid">
            <div class="span12">
              <div class="add-button-box">
                <h2>球員名單</h2>
                <div class="pull-right">
                  <%= link_to raw("<i class=\"icon-list icon-white\"></i> 所有球員"),{:controller=>"players",:action=>"index",:id=>@init},:class=> "btn btn-primary"%>
                  <%= link_to raw("<i class=\"icon-plus-sign icon-white\"></i> 新增球員"),{:action=>"new",:controller => "players",:id=>@init},:class=> "btn btn-primary"%>
                </div>
              </div>
              <div class="row-fluid">
                <div class="span6">
                  <table class="table table-striped" style="width:400px">
                    <tr>
                      <th>姓名</th>
                      <th>背號</th>
                      <th>出場次數</th>
                      <th></th>
                    </tr>
                  <% @players.each do |player| %>
                    <tr>
                      <td><%= player.name %></td>
                      <td><%= player.number %></td>
                      <td><%= Record.count(:id,:conditions => ["player_id =?",player.id])%></td>
                      <td>
                        <div  class="btn-group">
                          <%= link_to raw("<i class=\"icon-search\"></i>"), {:controller => 'player_box_scores', :action => 'index', :id => player},:class=>"btn" %>
                          <%= link_to raw("<i class=\"icon-edit\"></i>"), edit_player_path(player),:class=>"btn" %>
                          <%= link_to raw("<i class=\"icon-trash\"></i>"), player, method: :delete, data: { confirm: '刪除球員，記錄會一併刪除！您確定要刪除嗎？' },class: "btn" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>

      <% if @players.any? ==true && @games.any? ==false%>
        <div id="tips" class="tips tip-index-game" onClick="closeTip();">
          <p>新增一場比賽➡</p>
        </div>
      <% end %>
        <hr>
      </div>
    </div>
  </div>
</div>