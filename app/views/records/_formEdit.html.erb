<%= form_for(@record) do |f| %>
  <% if @record.errors.any? %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>
        <%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:
      </strong>
      <ul>
      <% @record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="row-fluid frame-box">
    <div class="span12">
      <div class="row-fluid">
        <div class="span6">
          <%= f.label "名稱：" %><%= Player.find(@record.player_id).name %>
          <% #f.collection_select :player_id, Player.where(:team_id => @team).order(:name),:id,:name, include_blank: true %>  
        </div>
        <div class="span6">
          <%= f.label "先發球員：" %>
          <%= f.radio_button :starter, "false", :checked =>true%>
          <%= f.label :starter_false, "否",:style=>"display:inline" %>
          <%= f.radio_button :starter, "true"%>
          <%= f.label :starter_true, "是",:style=>"display:inline" %>
        </div>
      </div>
    </div>

  </div>
  <hr>
  <div class="row-fluid frame-box">
    <div class="span12">
      <div class="field" style="display:none">
<<<<<<< HEAD
        <%= f.text_field :game_id%>
=======
        <%= f.text_field :game_id %>
>>>>>>> Andy
        <%= f.text_field :free_throw_total%>
        <%= f.text_field :two_points_total%>
        <%= f.text_field :three_points_total%>
        <%= f.text_field :rebound_total%>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <div class="field">
          <%= f.label "罰球-命中" %><br />
          <%= f.text_field :free_throw_made%>
        </div>
        <div class="field">
          <%= f.label "罰球-失誤" %><br />
          <%= f.text_field :free_throw_miss%>
        </div>
        <div class="field">
          <%= f.label "兩分球-命中" %><br />
          <%= f.text_field :two_points_made%>
        </div>
        <div class="field">
          <%= f.label "兩分球-失分" %><br />
          <%= f.text_field :two_points_miss%>
        </div>
        <div class="field">
          <%= f.label "三分球-命中" %><br />
          <%= f.text_field :three_points_made%>
        </div>
        <div class="field">
          <%= f.label "三分球-失誤" %><br />
          <%= f.text_field :three_points_miss%>
        </div>
      </div>
      <div class="span6">
        <div class="field">
          <%= f.label "助攻" %><br />
          <%= f.text_field :assist%>
        </div>
        <div class="field">
          <%= f.label "火鍋" %><br />
          <%= f.text_field :block%>
        </div>
        <div class="field">
          <%= f.label "失誤" %><br />
          <%= f.text_field :turn_over %>
        </div>
        <div class="field">
          <%= f.label "抄截" %><br />
          <%= f.text_field :steal%>
        </div>
        <div class="field">
          <%= f.label "防守籃板" %><br />
          <%= f.text_field :defensive_rebound %>
        </div>
        <div class="field">
          <%= f.label "進攻籃板" %><br />
          <%= f.text_field :offensive_rebound%>
        </div>
        <div class="field">
          <%= f.label "失誤" %><br />
          <%= f.text_field :personal_foul%>
        </div>
      </div>
    </div>
    <div class="actions pull-right">
    <%= link_to "取消", games_path ,:class=>"btn"%>
    <%= f.submit "確定",:class=>"btn btn-success"%>
  </div>
  </div>
  
<% end %>
