<%= form_for(@record) do |f| %>
  <% if @record.errors.any? %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong><%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:</strong>

      <ul>
      <% @record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :player_name %>
    <%= f.collection_select :player_id, Player.where(:team_id => current_team_user.id).order(:name),:id,:name, include_blank: true %>
  </div>
  <div class="field" style="display:none">
    <%= f.label :game_id %><br />
    <%= f.number_field :game_id %>
  </div>
