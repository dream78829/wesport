<%= form_for(@record,:html=>{:class=>"cmxform new_record",:onsubmit=>"return dataValidate(this);"}) do |f| %>
  <% if @record.errors.any? %>
    <div class="alert">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <strong>
        <%= pluralize(@record.errors.count, "error") %> prohibited this record from being saved:
      </strong>
      <ul>
      <% @record.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row-fluid frame-box">
    <div class="span12">
      <div class="row-fluid">
        <div class="span6">
          <%= f.label "名稱：" %>
          <%= f.collection_select :player_id, Player.where(:team_id => @team).order(:name),:id,:name, include_blank: "請選擇" %>  
        </div>
        <div class="span6 form-inline">
          <%= f.label "先發球員：" %>
          <%= f.label :starter_false, "否",:style=>"display:inline" %>
          <%= f.radio_button :starter, "false", :checked =>true%>
           <%= f.label :starter_true, "是",:style=>"display:inline" %>
          <%= f.radio_button :starter, "true"%>
         
        </div>
      </div>
    </div>
  </div>
  <hr>
  <div class="row-fluid frame-box">
    <div class="span12">
      <div class="field" style="display:none">
        <%= f.text_field :game_id%>
        <%= f.text_field :free_throw_total,:value=>0%>
        <%= f.text_field :two_points_total,:value=>0%>
        <%= f.text_field :three_points_total,:value=>0%>
        <%= f.text_field :rebound_total,:value=>0%>
      </div>
      <table class="table">
        <tr>
          <th><%= f.label "兩分球-命中" %></th>
          <th><%= f.label "兩分球-失誤" %></th>
          <th><%= f.label "三分球-命中" %></th>
          <th><%= f.label "三分球-失誤" %></th>
          <th><%= f.label "罰球-命中" %></th>
          <th><%= f.label "罰球-失誤" %></th>
          <th>得分</th>
        </tr>
        <tr>
          <td><%= f.text_field :two_points_made ,:value=>0,:onChange=>"getTotal();"%></td>
          <td><%= f.text_field :two_points_miss ,:value=>0%></td>
          <td><%= f.text_field :three_points_made ,:value=>0,:onChange=>"getTotal();" %></td>
          <td><%= f.text_field :three_points_miss ,:value=>0 %></td>
          <td><%= f.text_field :free_throw_made,:value=>0,:onChange=>"getTotal();" %></td>
          <td><%= f.text_field :free_throw_miss,:value=>0%></td>
          <td><input id="record_total"size="30" type="text" value="0" disabled="true"/></td>
        </tr>
        <tr>
          <th><%= f.label "助攻" %></th>
          <th><%= f.label "阻攻" %></th>
          <th><%= f.label "失誤" %></th>
          <th><%= f.label "抄截" %></th>
          <th><%= f.label "進攻籃板" %><br /></th>
          <th><%= f.label "防守籃板" %></th>
          <th><%= f.label "失誤" %></th>
        </tr>
         <tr>
          <td><%= f.text_field :assist,:data=>{:helper=>"助攻"},:value=>0 %></td>
          <td><%= f.text_field :block,:data=>{:helper=>"火鍋"},:value=>0 %></td>
          <td><%= f.text_field :turn_over,:data=>{:helper=>"失誤"},:value=>0 %></td>
          <td><%= f.text_field :steal,:data=>{:helper=>"抄截"},:value=>0 %></td>
          <td><%= f.text_field :offensive_rebound,:data=>{:helper=>"進攻籃板"},:value=>0 %></td>
          <td><%= f.text_field :defensive_rebound,:data=>{:helper=>"防守籃板"},:value=>0 %></td>
          <td><%= f.text_field :personal_foul,:data=>{:helper=>"失誤"},:value=>0 %></td>
        </tr>
      </table>
    </div>
  </div>
  <hr>
  
    
  <div class="actions pull-right">
    <%= link_to "取消", games_path ,:class=>"btn"%>
    <%= f.submit "確定",:class=>"btn btn-success",:id=>"new_record_submit"%>
  </div>

  
<% end %>