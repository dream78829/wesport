<%- model_class = Record -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:player_id) %>:</strong></dt>
  <dd><%= @record.player_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:game_id) %>:</strong></dt>
  <dd><%= @record.game_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:free_throw_made) %>:</strong></dt>
  <dd><%= @record.free_throw_made %></dd>
  <dt><strong><%= model_class.human_attribute_name(:free_throw_miss) %>:</strong></dt>
  <dd><%= @record.free_throw_miss %></dd>
  <dt><strong><%= model_class.human_attribute_name(:free_throw_total) %>:</strong></dt>
  <dd><%= @record.free_throw_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:two_points_made) %>:</strong></dt>
  <dd><%= @record.two_points_made %></dd>
  <dt><strong><%= model_class.human_attribute_name(:two_points_total) %>:</strong></dt>
  <dd><%= @record.two_points_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:three_points_made) %>:</strong></dt>
  <dd><%= @record.three_points_made %></dd>
  <dt><strong><%= model_class.human_attribute_name(:three_points_miss) %>:</strong></dt>
  <dd><%= @record.three_points_miss %></dd>
  <dt><strong><%= model_class.human_attribute_name(:three_points_total) %>:</strong></dt>
  <dd><%= @record.three_points_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:assist) %>:</strong></dt>
  <dd><%= @record.assist %></dd>
  <dt><strong><%= model_class.human_attribute_name(:block) %>:</strong></dt>
  <dd><%= @record.block %></dd>
  <dt><strong><%= model_class.human_attribute_name(:turn_over) %>:</strong></dt>
  <dd><%= @record.turn_over %></dd>
  <dt><strong><%= model_class.human_attribute_name(:steal) %>:</strong></dt>
  <dd><%= @record.steal %></dd>
  <dt><strong><%= model_class.human_attribute_name(:defensive_rebound) %>:</strong></dt>
  <dd><%= @record.defensive_rebound %></dd>
  <dt><strong><%= model_class.human_attribute_name(:offensive_rebound) %>:</strong></dt>
  <dd><%= @record.offensive_rebound %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rebound_total) %>:</strong></dt>
  <dd><%= @record.rebound_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:personal_foul) %>:</strong></dt>
  <dd><%= @record.personal_foul %></dd>
  <dt><strong><%= model_class.human_attribute_name(:points_total) %>:</strong></dt>
  <dd><%= @record.points_total %></dd>
  <dt><strong><%= model_class.human_attribute_name(:efficiency_formula) %>:</strong></dt>
  <dd><%= @record.efficiency_formula %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              record_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_record_path(@record), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              record_path(@record),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
